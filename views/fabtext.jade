extends layout

block content
	script(type='text/javascript', src="/javascripts/fabtext-script.js")
	div(class='col-md-6 col-md-offset-3')
		div(class='well' id='title_div')
			input(type='text' id='title_text' class="form-control" placeholder='Title')
					
		div(class='well' id='content_div')
			textarea(id='content_text'  class="form-control" placeholder="Type in your message" rows='10' style='resize: none;')
			br
			h6(class='pull-right' id='count_message')
			br
			button(class='btn btn-info' type='button' id="submit_button") Submit
			
		div(class='well' id='list_div')
			div(id='list_item_div')
			div
				button(class='btn btn-info pull-right' type='button' id="update_button") Update
				br
				br
		